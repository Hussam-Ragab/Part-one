
/*
 * Write a program that reads a positive integer and checks if it is a prime.
 *
 * */

#include <stdio.h>

int main(void)
{
	int num,iterator;

		do{
			printf("enter number\n");
			fflush(stdout);
			scanf("%d",&num);
		}while(num<0);

		if(num == 0 || num == 1)
		{
			printf("%d");
		}

		for(iterator = num; iterator >= 1; --iterator)
		{
			Factorial *= iterator;
		}
		printf("Factorial of %d = %d\n",num,Factorial);


	return 0;
}


