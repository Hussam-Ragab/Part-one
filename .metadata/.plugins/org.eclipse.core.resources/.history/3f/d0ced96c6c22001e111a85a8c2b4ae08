
/*
 *  Print sum of first 100 integers. (With data validation)
 *
 * */

#include <stdio.h>
#define MAX_NUM		100

int main(void)
{
	int sum = 0, iterator;
	for(iterator = 0; iterator<MAX_NUM; iterator++)
	{
		sum += iterator;
	}

	printf("Sum of first 100 integers = %d\n",sum);
	fflush(stdout);

	return 0;
}
