
/*
 * Write a program that takes three integers, and prints out the smallest number.
 *
 * */

#include <stdio.h>

int main(void)
{
	int num1,num2,num3;
	printf("enter three numbers\n");
	fflush(stdout);
	scanf("%d%d%d",&num1,&num2,&num3);
	if(num1>num2)
	{
		if(num3>num2)
			printf("num2 is the smallest number\n");
		else
			printf("num3 is the smallest number\n");
	}
	else if(num1>num3)
	{
		if(num2>num3)
			printf("num3 is the smallest number\n");
		else
			printf("num2 is the smallest number\n");
	}
	else
	{
		printf("num1 is the smallest number\n");
	}


	int num1,num2,num3,Min;
	printf("enter three numbers\n");
	fflush(stdout);
	scanf("%d%d%d",&num1,&num2,&num3);
	Min = num1;
	if(num2<=Min)
	{
		Min = num2;
	}
	if(num3<=Min)
	{
		Min = num3;
	}

	printf("%d is the smallest number\n",Min);

	return 0;
}
